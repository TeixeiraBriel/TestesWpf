<Window x:Class="TestesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Digite um Id e vamos buscar no Json a informação equivalente."/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Name="txtBuscar" Width="200"/>
                <Button Margin="5,0,0,0" Width="100" Content="Buscar" Click="Button_Click"/>
            </StackPanel>
            <Label Content="" Name="lblResultado" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
